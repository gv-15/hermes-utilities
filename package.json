{
  "name": "hermes-utilities",
  "version": "0.1.0",
  "license": "MIT",
  "author": "gv-15",
  "main": "dist/index.js",
  "module": "dist/hermes-utilities.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test",
    "format": "prettier --write 'src/**/*.{ts,html,scss}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write 'src/**/*.{ts,html,scss}'"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "strict",
    "bracketSpacing": true,
    "trailingComma": "es5"
  },
  "jest": {
    "transformIgnorePatterns": [],
    "maxWorkers": 2,
    "workerIdleMemoryLimit": "2GB",
    "forceExit": true,
    "clearMocks": true,
    "logHeapUsage": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [],
    "coverageThreshold": {
      "global": {
        "statements": 50,
        "branches": 50,
        "functions": 50,
        "lines": 50
      }
    },
    "coverageReporters": [
      "html",
      [
        "text",
        {
          "file": "../coverage.txt",
          "maxCols": 120
        }
      ],
      "text",
      "text-summary"
    ],
    "testEnvironment": "node"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/hermes-utilities.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/hermes-utilities.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^10.0.3",
    "@tsconfig/recommended": "^1.0.3",
    "dts-cli": "^2.0.3",
    "husky": "^8.0.3",
    "size-limit": "^10.0.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.17.14",
    "jest": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "ng-mocks": "^14.11.0"
  }
}
